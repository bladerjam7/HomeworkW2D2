<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyFourthApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTitle">
        <item name="android:fontFamily">@font/staatliches_regular</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="GeneralPizzaFont" parent="AppTitle">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="GeneralPriceFont">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_mono_variable_font_wght</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="GeneralPizzaFlavorDetailFont" parent="AppTitle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GeneralPizzaPriceDetailFont" parent="GeneralPriceFont">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="GeneralPizzaDetailTitles" parent="AppTitle">
        <item name="android:textSize">20sp</item>
    </style>
</resources>